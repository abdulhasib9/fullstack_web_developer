   <ul class="list-group">
    <% for( let index = 0; index < newItem.length; index++ ) { %>
    <li class="list-group-item">
      <input class="form-check-input me-1" type="radio" name="listGroupRadio"  id="<%= newItem[index] %>">
      <label class="form-check-label" for="<%= newItem[index] %>"><%= newItem[index] %></label>
    </li>
    <% } %>
   
  </ul>



   <form action="/add" method="post">
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <label for="additem">
                Add Todo 
            </label>
            <input class="form-control" type="text"  id="additem" name="addInput">
            <button class="btn btn-primary" type="submit">Add</button>
        </div>
    </div>
       
   </form>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
